# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-change-in-production

# Database
# SQLite (default - no setup required, perfect for development)
DATABASE_URL=sqlite:///marketplace.db

# PostgreSQL (for production with Docker)
# DATABASE_URL=postgresql://marketplace_user:marketplace_pass@postgres:5432/marketplace_db

# PostgreSQL (for local development without Docker)
# DATABASE_URL=postgresql://localhost:5432/marketplace_db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# Redis
REDIS_URL=redis://redis:6379/0
# For local development without Docker:
# REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# OCR
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGES=eng

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=/tmp/uploads
ALLOWED_EXTENSIONS=xlsx,xls,csv,png,jpg,jpeg,pdf

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis://redis:6379/1
RATE_LIMIT_DEFAULT=100 per minute
RATE_LIMIT_UPLOAD=10 per minute
RATE_LIMIT_EXPORT=50 per hour

# Email (for password reset - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_ENABLED=false

# Security
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Data Retention (days)
DATA_RETENTION_DAYS=30

